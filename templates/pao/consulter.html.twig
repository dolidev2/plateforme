{% extends 'base.html.twig' %}

{% block title %} PromoPub-Integral | {{ service.nomService }} | {{type | title}}{% endblock %}

{% block content %}

  <div style="margin-left: 40%;">
       <button type="button" class="btn btn-primary btn-rounded btn-fw">{{  service.nomService | upper }} | {{type | title}}</button>
  </div>
    {% include "pao/menu.html.twig" %}
    <div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">{{type | title}}</h4>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>N°</th>
                            <th>Date</th>
                            <th>Annonceur</th>
                            <th>Description</th>
                            <th>Demandeur</th>
                            <th>Responsable</th>
                            <th>Statut</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if creation is defined and creation is null %}
                            <tr>
                                <td></td>
                                <td></td> 
                                <td></td>
                                <td></td>
                                <td><h4>Aucune {{type | title}} en cours</h4></td>
                            </tr>
                        {% elseif  creation is defined and creation is not null %}
                            {% set i =1 %}
                            {% for ct in creation %}
                                <tr>
                                    <td>{{ i }}</td>
                                    <td>{{ ct.createdAt | date("m-Y") }}</td>
                                    <td>{{ ct.client }}</td>
                                    <td>{{ ct.description }}</td>
                                    <td>{{ ct.emetteur }}</td>
                                    <td>{{ ct.prenom }} {{ ct.nom }}</td>
                                    <td>
                                        {% if ct.statut == 0 %}
                                            <button class="btn btn-info">En Cours</button>
                                        {% else %}
                                            <button class="btn btn-success">Terminé</button>
                                        {% endif %}
                                    </td>
                                    <td>
                                    {% if app.user.id == ct.user %}
                                        <a  href="{{ path('app_service_pao_creation_modifier',{creation:ct.id,type:type})}}"><label class="badge badge-warning mr-1"><i class="fa fa-edit"  data-toggle="tooltip" data-placement="top" title="Modifier"></i></label></a> 
                                        <a  href="{{ path('app_service_pao_creation_supprimer',{creation:ct.id, type:type})}}"><label class="badge badge-danger"><i class="fa fa-trash-o "  data-toggle="tooltip" data-placement="top" title="Supprimer"></i></label></a>
                                    {% endif %}
                                    </td>
                                </tr>
                                {% set i = i+1 %}
                            {% endfor %}
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div> 
    </div>

{% endblock %}


