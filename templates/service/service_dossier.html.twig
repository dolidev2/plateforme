    <script>
        $(document).ready(function () {

            $('#cloturer').on('click', function () {

                var dossier = JSON.parse(JSON.stringify(parseInt( $('#dossierId').val())));
                $.ajax(
                    {
                        type: "POST",
                        url: "{{ path('app_service_dossier',{service:service,dossier:dossier.id}) }}",
                        data:
                            {   
                                dossier: dossier,
                            },
                        success:function (html) {
                            $('#messages').toast('show'); 
                        },
                        fail: function (html) {
                            alert("Information non ajouté");
                        }
                    }
                );
            });

        $('#btn_modifier_comment').on('click', function () {

                var message = JSON.parse(JSON.stringify( $('#commentMessage').val()));
                var id = JSON.parse(JSON.stringify(parseInt( $('#commentId').val())));
               $.ajax(
                    {
                        type: "POST",
                        url: "{{ path('app_service_dossier',{service:service,dossier:dossier.id}) }}",
                        data:
                            {   message : message,
                                id : id,
                            },
                        success:function (html) {
                            if(html)
                                window.location.href= "{{ path('app_service_dossier',{service:service,dossier:dossier.id}) }}"; 
                            else
                               alert("Commentaire non modifié");         
                        },
                        fail: function (html) {
                            alert("Commentaire non modifié");
                        }
                    }
                );


            });

        });

