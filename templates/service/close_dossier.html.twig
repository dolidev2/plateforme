{% extends 'base.html.twig' %}

{% block title %} {{ service.nomService }} | Cloturer Dossier | Nom_dossier{% endblock %}

{% block content %}
    <div style="margin-left: 40%;">
        <button type="button" class="btn btn-primary btn-rounded btn-fw">{{ service.nomService| upper }}</button>
    </div>
    <div class="row" style="margin-left: 30%; margin-top: 10px; margin-bottom: 10px;">

        <div class="col-md-3 col-lg-4 col-sm-4">
            <a href="{{ path('app_service_add_dossier',{service:service.id}) }}"><button type="button" class="btn btn-success btn-rounded btn-fw">Ajouter</button></a>
        </div>

        <div class="col-md-3 col-lg-4 col-sm-4">
            <a href="{{ path('app_service',{id:service.id}) }}"><button type="button" class="btn btn-warning btn-rounded btn-fw">Dossier</button></a>
        </div>

        <div class="col-md-3 col-lg-4 col-sm-4">
            <a href="{{ path('app_service_historique_dossier',{service:service.id}) }}"><button type="button" class="btn btn-info btn-rounded btn-fw">Historique</button></a>
        </div>

    </div>
    <br>
    <br>
    <div class="col-lg-12 col-md-12 col-xs-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">dossiers clôturés</h4>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>N°</th>
                            <th>Dossier</th>
                            <th>Date de début</th>
                            <th>Date de début</th>
                            <th>Action</th>
                            <th>Status</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if dossier|length == 0 %}
                            <tr>
                                <td></td>
                                <td></td>
                                <td><h4>Aucun dossier en cours</h4></td>
                            </tr>
                        {% else %}
                            {% set i =1 %}
                            {% for dossiers in dossier %}
                                <tr>
                                    <td>{{ i }}</td>
                                    <td>{{ dossiers.nomDossier }}</td>
                                    <td>{{ dossiers.createdAt|date('d/m/Y') }}</td>
                                    <td>{{ dossiers.updatedAt|date('d/m/Y') }}</td>
                                    <td>
                                        <a  href="{{ path('app_service_dossier',{dossier:dossiers.id, service:service.nomService}) }}"><label class="badge badge-success mr-1"><i class="fa fa-eye"  data-toggle="tooltip" data-placement="top" title="Voir plus"></i></label></a>
                                        <a  href="{{ path('app_service_update_dossier',{dossier:dossiers.id, service:service.nomService}) }}"><label class="badge badge-warning mr-1"><i class="fa fa-edit"  data-toggle="tooltip" data-placement="top" title="Modifier"></i></label></a>
                                        <a  href="#"><label class="badge badge-danger"><i class="fa fa-trash-o "  data-toggle="tooltip" data-placement="top" title="Supprimer"></i></label></a>
                                    </td>
                                    <td><label class="badge badge-info">Terminé</label></td>
                                </tr>
                                {% set i = i+1 %}
                            {% endfor %}
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


