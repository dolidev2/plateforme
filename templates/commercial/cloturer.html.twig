{% extends 'base.html.twig' %}

{% block title %} PromoPub-Integral | {{ service.nomService }} | {{ type }}{% endblock %}
{% block link %}
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
{% endblock %}
{% block content %}
    {% include "commercial/menu.html.twig" %}
    <div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title col-4">{{ type }}</h4>               
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>NÂ°</th>
                            <th>Date</th>
                            <th>Dossier</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if dossier is defined and dossier is null %}
                            <tr>
                                <td></td>
                                <td></td> 
                                <td></td>
                                <td></td>
                                <td><h4>Aucune {{type | title}} en cours</h4></td>
                            </tr>
                        {% elseif  dossier is defined and dossier is not null %}
                            {% set i =1 %}
                            {% for dos in dossier %}
                                <tr>
                                    <td>{{ i }}</td>
                                    <td>{{ dos.createdAt | date("d-m-Y") }}</td>
                                    <td>{{ dos.nom }}</td>
                                    <td>{{ dos.description }}</td>
                                    <td>
                                        {% include "commercial/action.html.twig" %}
                                    </td>
                                </tr>
                                {% set i = i+1 %}
                            {% endfor %}
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div> 
    </div>
{% endblock %}